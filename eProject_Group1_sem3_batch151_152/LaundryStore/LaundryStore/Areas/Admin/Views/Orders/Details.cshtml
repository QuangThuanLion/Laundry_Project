@model LaundryStore.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Main Content Start -->
<section class="main--content">
    <div class="panel container-fluid">
        <!-- Records Header Start -->
        <div class="records--header">
            <div class="title fa-shopping-bag">
                <h3 class="h3">Order Management<a data-toggle="modal" data-target="#exampleModal" href="#" class="btn btn-sm btn-outline-info">Order Detail</a></h3>
            </div>
            <!-- Button trigger modal -->
            <!-- Modal -->
            <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <i class="fab fa-expeditedssl" style="font-size:40px; margin:0 44%; color:orange" ;></i>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body" style="text-align:center">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Order Id</th>
                                        <th>Product Name</th>
                                        <th>Discount</th>
                                        <th>Price</th>
                                        <th>Type</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var od in ViewBag.ListOrderDetail)
                                    {
                                        <tr>
                                            <td>@od.id</td>
                                            <td>@od.orderId</td>
                                            <td>@od.Product.productName</td>
                                            <td>@od.discount</td>
                                            <td>@od.price</td>
                                            <td>@od.type</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>                     
                    </div>
                </div>
            </div>
            <div class="actions">
                <a style="margin-right:10px" class="addProduct btn btn-lg btn-rounded btn-info" title="Back" href="@Url.Action("Index", "Orders")">
                    <span>BACK</span>
                </a>
                <a class="addProduct btn btn-lg btn-rounded btn-warning" title="Edit" href="@Url.Action("Edit", "Orders", new { id = Model.id })">
                    <span>EDIT ORDER</span>
                </a>
            </div>
        </div>
        <!-- Records Header End -->
    </div>

    <div class="panel">

        <!-- View Order Start -->
        <div class="records--body">
            <div class="title">
                <h6 class="h6"><span class="text-lightergray">Detail Order</span></h6>
            </div>

            <!-- Tabs Nav Start -->
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="#tab01" data-toggle="tab" class="nav-link active">Detail</a>
                </li>
            </ul>
            <!-- Tabs Nav End -->
            <!-- Tab Content Start -->
            <div class="tab-content">
                <!-- Tab Pane Start -->
                <div class="tab-pane fade show active" id="tab01">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="subtitle">Other Information</h4>

                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>Id</td>
                                        <th>@Html.DisplayFor(model => model.id)</th>
                                    </tr>
                                    <tr>
                                        <td>Order Date</td>
                                        <th>@Html.DisplayFor(model => model.orderDate)</th>
                                    </tr>
                                    <tr>
                                        <td>Phone Customer</td>
                                        <th>@Html.DisplayFor(model => model.Employee.phone)</th>
                                    </tr>
                                    <tr>
                                        <td>Name Customer</td>
                                        <th>@Html.DisplayFor(model => model.Customer.fullname)</th>
                                    </tr>
                                    <tr>
                                        <td>Address</td>
                                        <th>@Html.DisplayFor(model => model.address)</th>
                                    </tr>
                                    <tr>
                                        <td>PayMent Status</td>
                                        <th>@Html.DisplayFor(model => model.paymentStatus)</th>
                                    </tr>
                                    <tr>
                                        <td>Amount</td>
                                        <th> @Html.DisplayFor(model => model.amount)</th>
                                    </tr>
                                    <tr>
                                        <td>Address</td>
                                        <th>@Html.DisplayFor(model => model.address)</th>
                                    </tr>
                                    <tr>
                                        <td>Description</td>
                                        <th>@Html.DisplayFor(model => model.description)</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <h4 class="subtitle">Other Information</h4>

                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>Created By</td>
                                        <th>@Html.DisplayFor(model => model.createdBy)</th>
                                    </tr>
                                    <tr>
                                        <td>Total Debt</td>
                                        <th>@Html.DisplayFor(model => model.totalDebt)</th>
                                    </tr>
                                    <tr>
                                        <td>Type</td>
                                        <th>@Html.DisplayFor(model => model.type)</th>
                                    <tr>
                                    <tr>
                                        <td>End Date</td>
                                        <th>@Html.DisplayFor(model => model.endDate)</th>
                                    </tr>
                                    <tr>
                                        <td>Payment Method</td>
                                        <th>@Html.DisplayFor(model => model.PayMentMethod.paymentName)</th>
                                    </tr>
                                    <tr>
                                        <td>Shipping Address</td>
                                        <th>@Html.DisplayFor(model => model.ShippingAdress.addressName)</th>
                                    </tr>
                                    <tr>
                                        <td>Order Status</td>
                                        <th>@Html.DisplayFor(model => model.Status1.statusName)</th>
                                    </tr>
                                    <tr>
                                        <td>Employee Confirm</td>
                                        <th>@Html.DisplayFor(model => model.Employee.fullname)</th>
                                    </tr>
                                    <tr>
                                        <td>Employee Shipping</td>
                                        <th>@Html.DisplayFor(model => model.Employee1.fullname)</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Tab Pane End -->
            </div>
            <!-- Tab Content End -->
        </div>
        <!-- View Order End -->
    </div>
</section>
<!-- Main Content End -->
