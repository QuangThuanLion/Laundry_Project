@model LaundryStore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Main Content Start -->
<section class="main--content">
    <div class="panel container-fluid">
        <!-- Records Header Start -->
        <div class="records--header">
            <div class="title fa-shopping-bag">
                <h3 class="h3">Product Management<a href="#" class="btn btn-sm btn-outline-info">Product Detail</a></h3>
            </div>
            <div class="actions">
                <a style="margin-right:10px" class="addProduct btn btn-lg btn-rounded btn-info" title="Back" href="@Url.Action("Index", "Products")">
                    <span>BACK</span>
                </a>
                <a class="addProduct btn btn-lg btn-rounded btn-warning" title="Edit" href="@Url.Action("Edit", "Products", new { id = Model.id })">
                    <span>EDIT PRODUCT</span>
                </a>
            </div>
        </div>
        <!-- Records Header End -->
    </div>

    <div class="panel">

        <!-- View Order Start -->
        <div class="records--body">
            <div class="title">
                <h6 class="h6"><span class="text-lightergray">Detail Product</span></h6>
            </div>

            <!-- Tabs Nav Start -->
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="#tab01" data-toggle="tab" class="nav-link active">Detail</a>
                </li>
            </ul>
            <!-- Tabs Nav End -->
            <!-- Tab Content Start -->
            <div class="tab-content">
                <!-- Tab Pane Start -->
                <div class="tab-pane fade show active" id="tab01">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="subtitle">Other Information</h4>

                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>Id</td>
                                        <th>@Html.DisplayFor(model => model.id)</th>
                                    </tr>
                                    <tr>
                                        <td>Product Name</td>
                                        <th>@Html.DisplayFor(model => model.productName)</th>
                                    </tr>
                                    <tr>
                                        <td>Description</td>
                                        <th>@Html.DisplayFor(model => model.description)</th>
                                    </tr>
                                    <tr>
                                        <td>ViewCount</td>
                                        <th>@Html.DisplayFor(model => model.viewCount)</th>
                                    </tr>
                                    <tr>
                                        <td>Discount</td>
                                        <th>@Html.DisplayFor(model => model.discount)</th>
                                    </tr>
                                    <tr>
                                        <td>CreatedDate</td>
                                        <th>@Html.DisplayFor(model => model.createdDate)</th>
                                    </tr>
                                    <tr>
                                        <td>CreatedBy</td>
                                        <th>@Html.DisplayFor(model => model.createdBy)</th>
                                    </tr>
                                    <tr>
                                        <td>Status</td>
                                        <th>
                                            @if (Model.status == true)
                                            {
                                                <span class="label label-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">No</span>
                                            }
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <h4 class="subtitle">Other Information</h4>

                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>ModifiedDate</td>
                                        <th>@Html.DisplayFor(model => model.modifyDate)</th>
                                    </tr>
                                    <tr>
                                        <td>ModifiedBy</td>
                                        <th>@Html.DisplayFor(model => model.modifyBy)</th>
                                    </tr>
                                    <tr>
                                        <td>Package Type</td>
                                        <th>@Html.DisplayFor(model => model.pieceType)</th>
                                    </tr>
                                    <tr>
                                        <td>Price Package</td>
                                        <th>@Html.DisplayFor(model => model.pricePiece)</th>
                                    </tr>
                                    <tr>
                                        <td>Kg Type</td>
                                        <th>@Html.DisplayFor(model => model.kgType)</th>
                                    </tr>
                                    <tr>
                                        <td>Price Kg</td>
                                        <th>@Html.DisplayFor(model => model.priceKg)</th>
                                    </tr>
                                    <tr>
                                        <td>Category Name</td>
                                        <th>@Html.DisplayFor(model => model.Category.categoryName)</th>
                                    </tr>                                           
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Tab Pane End -->
            </div>
            <!-- Tab Content End -->
        </div>
        <!-- View Order End -->
    </div>
</section>
<!-- Main Content End -->
