@model LaundryStore.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Main Content Start -->
        <section class="main--content">
            <div class="panel">
                <!-- Records Header Start -->
                <div class="records--header">
                    <div class="title fa-shopping-bag">
                        <h3 class="h3">Product Management<a href="#" class="btn btn-sm btn-outline-info">Product Create</a></h3>
                    </div>
                    <div class="actions">
                        <a style="margin-right:10px" class="addProduct btn btn-lg btn-rounded btn-info" title="Back" href="@Url.Action("Index", "Products")">
                            <span>BACK</span>
                        </a>
                        <div style="margin-right:10px" class="addProduct btn btn-sm btn-rounded btn-warning">
                            <div>
                                <button type="submit" class="btn btn-warning"><b>CREATE PRODUCT</b></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Records Header End -->
            </div>

            <div class="panel">

                <!-- Edit Product Start -->
                <div class="records--body">
                    <div class="title">
                        <h6 class="h6">CREATE PRODUCT</h6>
                    </div>

                    <!-- Tabs Nav Start -->
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a href="#tab01" data-toggle="tab" class="nav-link active">Create</a>
                        </li>
                    </ul>
                    <!-- Tabs Nav End -->
                    <!-- Tab Content Start -->
                    <div class="tab-content">
                        <!-- Tab Pane Start -->
                        <div class="tab-pane fade show active" id="tab01">
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <b><span>Name</span></b>
                                    @Html.EditorFor(model => model.productName, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    @Html.ValidationMessageFor(model => model.productName, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-sm-6">
                                    <b><span>Category Name</span></b>
                                    @Html.DropDownList("categoryId", null, htmlAttributes: new { @class = "form-control", @required = true })
                                    @Html.ValidationMessageFor(model => model.categoryId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <b><span>Descriptions</span></b>
                                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="pieceType"><b>Package Type</b></label>
                                    <select id="pieceType" name="pieceType" class="form-control" required>
                                        <option>--Select Package--</option>
                                        <option value="piece">Piece</option>
                                        <option value="week">Week</option>
                                        <option value="month">Month</option>
                                        <option value="quarter">Quarter</option>
                                        <option value="year">Year</option>
                                        <option value="spa">Spa</option>
                                        <option value="hotel">Hotel</option>
                                        <option value="resort">Resort</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <b><span>Kg Type</span></b>
                                    <input class="form-control" type="text" value="Kg" readonly="readonly"/>
                                    @Html.ValidationMessageFor(model => model.kgType, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group col-sm-6">
                                    <b><span>Price Piece</span></b>
                                    @Html.EditorFor(model => model.pricePiece, new { htmlAttributes = new { @class = "form-control" , @required = true} })
                                    @Html.ValidationMessageFor(model => model.pricePiece, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <b><span>Price Kg</span></b>
                                    @Html.EditorFor(model => model.priceKg, new { htmlAttributes = new { @class = "form-control" , @required = true} })
                                    @Html.ValidationMessageFor(model => model.priceKg, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-sm-6">
                                    <b><span>Image</span></b>
                                    <input class="form-control" type="file" name="image" />
                                </div>
                            </div>   
                        </div>
                        <!-- Tab Pane End -->
                    </div>
                    <!-- Tab Content End -->
                </div>
                <!-- Edit Product End -->
            </div>
        </section>
    </div>
}
