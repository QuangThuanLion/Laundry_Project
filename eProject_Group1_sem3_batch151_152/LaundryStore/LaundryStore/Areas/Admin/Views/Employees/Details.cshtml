@model LaundryStore.Models.Employee

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Main Content Start -->
<section class="main--content">
    <div class="panel container-fluid">
        <!-- Records Header Start -->
        <div class="records--header">
            <div class="title fa-shopping-bag">
                <h3 class="h3">Employee Management<a href="#" class="btn btn-sm btn-outline-info">Employee Detail</a></h3>
            </div>
            <div class="actions">
                <a style="margin-right:10px" class="addProduct btn btn-lg btn-rounded btn-info" title="Back" href="@Url.Action("Index", "Employees")">
                    <span>BACK</span>
                </a>
                <a class="addProduct btn btn-lg btn-rounded btn-warning" title="Edit" href="@Url.Action("Edit", "Employees", new { id = Model.id })">
                    <span>EDIT EMPLOYEE</span>
                </a>
            </div>
        </div>
        <!-- Records Header End -->
    </div>

    <div class="panel">

        <!-- View Order Start -->
        <div class="records--body">
            <div class="title">
                <h6 class="h6"><span class="text-lightergray">Detail Employee</span></h6>
            </div>

            <!-- Tabs Nav Start -->
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="#tab01" data-toggle="tab" class="nav-link active">Detail</a>
                </li>
            </ul>
            <!-- Tabs Nav End -->
            <!-- Tab Content Start -->
            <div class="tab-content">
                <!-- Tab Pane Start -->
                <div class="tab-pane fade show active" id="tab01">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="subtitle">Other Information</h4>

                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>Id</td>
                                        <th>@Html.DisplayFor(model => model.id)</th>
                                    </tr>
                                    <tr>
                                        <td>Email</td>
                                        <th>@Html.DisplayFor(model => model.email)</th>
                                    </tr>
                                    <tr>
                                        <td>Full Name</td>
                                        <th>@Html.DisplayFor(model => model.fullname)</th>
                                    </tr>
                                    <tr>
                                        <td>Phone</td>
                                        <th>@Html.DisplayFor(model => model.phone)</th>
                                    </tr>
                                    <tr>
                                        <td>Gender</td>
                                        <th>@Html.DisplayFor(model => model.gender)</th>
                                    </tr>
                                    <tr>
                                        <td>Date Of Birth</td>
                                        <th>@Html.DisplayFor(model => model.dayOfBirth)</th>
                                    </tr>
                                    <tr>
                                        <td>Address</td>
                                        <th>@Html.DisplayFor(model => model.address)</th>
                                    </tr>
                                    <tr>
                                        <td>Date Start</td>
                                        <th>@Html.DisplayFor(model => model.dateStart)</th>
                                    </tr>
                                    <tr>
                                        <td>Date End</td>
                                        <th>@Html.DisplayFor(model => model.dateEnd)</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <h4 class="subtitle">Other Information</h4>

                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>Contract Salary</td>
                                        <th>@Html.DisplayFor(model => model.contractSalary)</th>
                                    </tr>
                                    <tr>
                                        <td>Unit Salary</td>
                                        <th>@Html.DisplayFor(model => model.unitSalary)</th>
                                    </tr>
                                    <tr>
                                        <td>Schedule</td>
                                        <th>@Html.DisplayFor(model => model.schedule)</th>
                                    </tr>
                                    <tr>
                                        <td>CreatedDate</td>
                                        <th>@Html.DisplayFor(model => model.createdDate)</th>
                                    </tr>
                                    <tr>
                                        <td>CreatedBy</td>
                                        <th>@Html.DisplayFor(model => model.createdBy)</th>
                                    </tr>
                                    <tr>
                                        <td>ModifiedDate</td>
                                        <th>@Html.DisplayFor(model => model.modifyDate)</th>
                                    </tr>
                                    <tr>
                                        <td>ModifiedBy</td>
                                        <th>@Html.DisplayFor(model => model.modifyBy)</th>
                                    </tr>
                                    <tr>
                                        <td>Role</td>
                                        <th>@ViewBag.RoleEmployee</th>
                                    </tr>
                                    <tr>
                                        <td>Status</td>
                                        <th>
                                            @if (Model.status == true)
                                            {
                                                <span class="label label-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">No</span>
                                            }
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>Activated</td>
                                        <th>
                                            @if (Model.activated == true)
                                            {
                                                <span class="label label-success">Actived</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">Inactive</span>
                                            }
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Tab Pane End -->
            </div>
            <!-- Tab Content End -->
        </div>
        <!-- View Order End -->
    </div>
</section>
<!-- Main Content End -->
