    <!--===============================================================================================-->
    <link href="~/Assets/Admin/vendors/loginPage/vendor/select2/select2.min.css" rel="stylesheet" type="text/css" />
    <!--===============================================================================================-->
    <link href="~/Assets/Admin/vendors/loginPage/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" type="text/css" />
    <!--===============================================================================================-->
    <link href="~/Assets/Admin/vendors/loginPage/css/util.css" rel="stylesheet" type="text/css" />
    <!--===============================================================================================-->
    <link href="~/Assets/Admin/vendors/loginPage/css/main.css" rel="stylesheet" type="text/css" />
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title" style="background-image: url('/Assets/Admin/vendors/loginPage/images/bg-01.jpg');">
                    <span class="login100-form-title-1">
                        ForGot Password
                    </span>
                </div>
                <form class="login100-form validate-form" action="forgotPassword" method="post">
                    @if (@ViewData["message"] != null)
                    {
                        <div class="alert alert-@ViewData["alert"]" role="alert">
                            @ViewData["message"]
                        </div>
                    }
                    <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
                        <span class="label-input100">Username</span>
                        <input class="input100" type="email" name="email" placeholder="Enter email">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="container-login100-form-btn" style="padding-left:25%">
                        <button class="login100-form-btn" type="submit">
                            Retrieve password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Assets/Admin/vendors/loginPage/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/Admin/vendors/loginPage/vendor/animsition/js/animsition.min.js"></script>
