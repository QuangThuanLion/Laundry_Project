    <!--===============================================================================================-->
    <script src="~/Assets/Admin/vendors/loginPage/vendor/daterangepicker/moment.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/Admin/vendors/loginPage/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/Admin/vendors/loginPage/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Assets/Admin/vendors/loginPage/js/main.js"></script>
</body>
</html>

