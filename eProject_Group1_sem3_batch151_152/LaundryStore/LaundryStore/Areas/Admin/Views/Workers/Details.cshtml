@model LaundryStore.Models.Worker

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Main Content Start -->
<section class="main--content">
    <div class="panel container-fluid">
        <!-- Records Header Start -->
        <div class="records--header">
            <div class="title fa-shopping-bag">
                <h3 class="Workers Management</h3>
            </div>
            <div class="actions">
                <a style="margin-right:10px" class="addProduct btn btn-lg btn-rounded btn-info" title="Back" href="@Url.Action("Index", "Workers")">
                    <span>BACK</span>
                </a>
                <a class="addProduct btn btn-lg btn-rounded btn-warning" title="Edit" href="@Url.Action("Edit", "Workers", new { id = Model.id })">
                    <span>EDIT WORKERS</span>
                </a>
            </div>
        </div>
        <!-- Records Header End -->
    </div>

    <div class="panel">

        <!-- View Order Start -->
        <div class="records--body">
            <div class="title">
                <h6 class="h6"><span class="text-lightergray">Detail Worker</span></h6>
            </div>

            <!-- Tabs Nav Start -->
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="#tab01" data-toggle="tab" class="nav-link active">Detail</a>
                </li>
            </ul>
            <!-- Tabs Nav End -->
            <!-- Tab Content Start -->
            <div class="tab-content">
                <!-- Tab Pane Start -->
                <div class="tab-pane fade show active" id="tab01">
                    <h4 class="subtitle">Other Information</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>ID</td>
                                        <th>@Html.DisplayFor(model => model.id)</th>
                                    </tr>
                                    <tr>
                                        <td>Worker Name</td>
                                        <th>@Html.DisplayFor(model => model.workerName)</th>
                                    </tr>
                                    <tr>
                                        <td>Phone</td>
                                        <th>@Html.DisplayFor(model => model.phone)</th>
                                    </tr>
                                    <tr>
                                        <td>Address</td>
                                        <th>@Html.DisplayFor(model => model.address)</th>
                                    </tr>
                                    <tr>
                                        <td>Gender</td>
                                        <th>@Html.DisplayFor(model => model.gender)</th>
                                    </tr>
                                    <tr>
                                        <td>Day of birth</td>
                                        <th>@Html.DisplayFor(model => model.dayOfBirth)</th>
                                    </tr>
                                    <tr>
                                        <td>Avatar</td>
                                        <th>@Html.DisplayFor(model => model.avatar)</th>
                                    </tr>

                                </tbody>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>Status</td>
                                        <th>
                                            @if (Model.status == true)
                                            {
                                                <span class="label label-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">No</span>
                                            }
                                        </th>
                                    </tr>
                                    <tr>
                                        <td>Date start</td>
                                        <th>@Html.DisplayFor(model => model.dateStart)</th>
                                    </tr>
                                    <tr>
                                        <td>Date end</td>
                                        <th>@Html.DisplayFor(model => model.dateEnd)</th>
                                    </tr>
                                    <tr>
                                        <td>Contact salary</td>
                                        <th>@Html.DisplayFor(model => model.contactSalary)</th>
                                    </tr>
                                    <tr>
                                        <td>Unit salary</td>
                                        <th>@Html.DisplayFor(model => model.unitSalary)</th>
                                    </tr>
                                    <tr>
                                        <td>Work time</td>
                                        <th>@Html.DisplayFor(model => model.workTime)</th>
                                    </tr>
                                    <tr>
                                        <td>Schedule</td>
                                        <th>@Html.DisplayFor(model => model.schedule)</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Tab Pane End -->
            </div>
            <!-- Tab Content End -->
        </div>
        <!-- View Order End -->
    </div>
</section>
<!-- Main Content End -->
