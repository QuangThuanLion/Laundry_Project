@model LaundryStore.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- Main Content Start -->
<section class="main--content">
    <div class="panel container-fluid">
        <!-- Records Header Start -->
        <div class="records--header">
            <div class="title fa-shopping-bag">
                <h3 class="h3">Category Management</h3>
            </div>
            <div class="actions">
                <a style="margin-right:10px" class="addProduct btn btn-lg btn-rounded btn-info" title="Back" href="@Url.Action("Index", "Categories")">
                    <span>BACK</span>
                </a>
                <a class="addProduct btn btn-lg btn-rounded btn-warning" title="Edit" href="@Url.Action("Edit", "Categories", new { id = Model.id })">
                    <span>EDIT CATEGORY</span>
                </a>
            </div>
        </div>
        <!-- Records Header End -->
    </div>

    <div class="panel">

        <!-- View Order Start -->
        <div class="records--body">
            <div class="title">
                <h6 class="h6"><span class="text-lightergray">Detail Category</span></h6>
            </div>

            <!-- Tabs Nav Start -->
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="#tab01" data-toggle="tab" class="nav-link active">Detail</a>
                </li>
            </ul>
            <!-- Tabs Nav End -->
            <!-- Tab Content Start -->
            <div class="tab-content">
                <!-- Tab Pane Start -->
                <div class="tab-pane fade show active" id="tab01">
                    <h4 class="subtitle">Other Information</h4>
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>ID</td>
                                        <th>@Html.DisplayFor(model => model.id)</th>
                                    </tr>
                                    <tr>
                                        <td>Category Post Name</td>
                                        <th>@Html.DisplayFor(model => model.categoryName)</th>
                                    </tr>
                                    <tr>
                                        <td>Category Post Code</td>
                                        <th>@Html.DisplayFor(model => model.categoryCode)</th>
                                    </tr>
                                    <tr>
                                        <td>Created Date</td>
                                        <th>@Html.DisplayFor(model => model.createdDate)</th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>Created By</td>
                                        <th>@Html.DisplayFor(model => model.createdBy)</th>
                                    </tr>
                                    <tr>
                                        <td>Modify Date</td>
                                        <th>@Html.DisplayFor(model => model.modifyDate)</th>
                                    </tr>
                                    <tr>
                                        <td>Modify By</td>
                                        <th>@Html.DisplayFor(model => model.modifyBy)</th>
                                    </tr>
                                    <tr>
                                        <td>Status</td>
                                        <th>
                                            @if (Model.status == true)
                                            {
                                                <span class="label label-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">No</span>
                                            }
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Tab Pane End -->
            </div>
            <!-- Tab Content End -->
        </div>
        <!-- View Order End -->
    </div>
</section>
<!-- Main Content End -->
