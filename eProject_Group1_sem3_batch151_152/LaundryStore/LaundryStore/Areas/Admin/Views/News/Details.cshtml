@model LaundryStore.Models.News

@{

    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Main Content Start -->
<section class="main--content">
    <div class="panel container-fluid">
        <!-- Records Header Start -->
        <div class="records--header">
            <div class="title fa-shopping-bag">
                <h3 class="h3">Employee Management<a href="#" class="btn btn-sm btn-outline-info">Post Detail</a></h3>
            </div>
            <div class="actions">
                <a style="margin-right:10px" class="addProduct btn btn-lg btn-rounded btn-info" title="Back" href="@Url.Action("Index", "Employees")">
                    <span>BACK</span>
                </a>
                <a class="addProduct btn btn-lg btn-rounded btn-warning" title="Edit" href="@Url.Action("Edit", "Posts", new { id = Model.id })">
                    <span>EDIT Post</span>
                </a>
            </div>
        </div>
        <!-- Records Header End -->
    </div>

    <div class="panel">

        <!-- View Order Start -->
        <div class="records--body">
            <div class="title">
                <h6 class="h6"><span class="text-lightergray">Detail Post</span></h6>
            </div>

            <!-- Tabs Nav Start -->
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="#tab01" data-toggle="tab" class="nav-link active">Detail</a>
                </li>
            </ul>
            <!-- Tabs Nav End -->
            <!-- Tab Content Start -->
            <div class="tab-content">
                <!-- Tab Pane Start -->
                <div class="tab-pane fade show active" id="tab01">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="subtitle">Other Information</h4>

                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>Id</td>
                                        <th>@Html.DisplayFor(model => model.id)</th>
                                    </tr>
                                    <tr>
                                        <td>Title</td>
                                        <th>@Html.DisplayFor(model => model.title)</th>
                                    </tr>
                                    <tr>
                                        <td>Thumnail</td>
                                        <th>@Html.DisplayFor(model => model.thumbnail)</th>
                                    </tr>
                                    <tr>
                                        <td>Décription</td>
                                        <th>@Html.DisplayFor(model => model.shortDescription)</th>
                                    </tr>
                                    <tr>
                                        <td>Content</td>
                                        <th>@Html.DisplayFor(model => model.content)</th>
                                    </tr>

                                </tbody>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <h4 class="subtitle">Other Information</h4>

                            <table class="table table-simple">
                                <tbody>
                                    <tr>
                                        <td>CategryName</td>
                                        <th>@Html.DisplayFor(model => model.PostCategory.categoryCodePost)</th>
                                    </tr>
                                    <tr>
                                        <td>CreateDate</td>
                                        <th>@Html.DisplayFor(model => model.createdDate)</th>
                                    </tr>
                                    <tr>
                                        <td>Date Start</td>
                                        <th>@Html.DisplayFor(model => model.createdBy)</th>
                                    </tr>
                                    <tr>
                                        <td>ModifyBytd>
                                        <th>@Html.DisplayFor(model => model.modifyBy)</th>
                                    </tr>
                                    <tr>
                                        <td>ModifyDate</td>
                                        <th>@Html.DisplayFor(model => model.modifyDate)</th>
                                    </tr>
                                    <tr>
                                        <td>Status</td>
                                        <th>
                                            @if (Model.status == true)
                                            {
                                                <span class="label label-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="label label-danger">No</span>
                                            }
                                        </th>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- Tab Pane End -->
            </div>
            <!-- Tab Content End -->
        </div>
        <!-- View Order End -->
    </div>
</section>
<!-- Main Content End -->