@model LaundryStore.Models.News

@{
    /**/

    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("Edit", "Posts", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.title)
        @Html.HiddenFor(model => model.shortDescription)
        @Html.HiddenFor(model => model.categoryPostId)
        @Html.HiddenFor(model => model.createdDate)
        @Html.HiddenFor(model => model.createdBy)
        @Html.HiddenFor(model => model.modifyBy)
        @Html.HiddenFor(model => model.modifyDate)
        @Html.HiddenFor(model => model.PostCategory.categoryNamePost)
        @Html.HiddenFor(model => model.status)

        <!-- Main Content Start -->
        <section class="main--content">
            <div class="panel">
                <!-- Records Header Start -->
                <div class="records--header">
                    <div class="title fa-shopping-bag">
                        <h3 class="h3">Posts Management<a href="#" class="btn btn-sm btn-outline-info">Posts Edit</a></h3>
                    </div>
                    <div class="actions">
                        <a style="margin-right:10px" class="addProduct btn btn-lg btn-rounded btn-info" title="Back" href="@Url.Action("Index", "Posts")">
                            <span>BACK</span>
                        </a>
                        <div style="margin-right:10px" class="addProduct btn btn-sm btn-rounded btn-warning">
                            <div>
                                <button type="submit" class="btn btn-warning"><b>UPDATE POSTS</b></button>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Records Header End -->
            </div>

            <div class="panel">

                <!-- Edit Product Start -->
                <div class="records--body">
                    <div class="title">
                        <h6 class="h6">EDIT POSTS</h6>
                    </div>

                    <!-- Tabs Nav Start -->
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a href="#tab01" data-toggle="tab" class="nav-link active">Edit</a>
                        </li>
                    </ul>
                    <!-- Tabs Nav End -->
                    <!-- Tab Content Start -->
                    <div class="tab-content">
                        <!-- Tab Pane Start -->
                        <div class="tab-pane fade show active" id="tab01">
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <b><span>ID</span></b>
                                    @Html.EditorFor(model => model.id, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    @Html.ValidationMessageFor(model => model.id, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-sm-6">
                                    <b><span>Title</span></b>
                                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <b><span>Description</span></b>
                                    @Html.EditorFor(model => model.shortDescription, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    @Html.ValidationMessageFor(model => model.shortDescription, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-sm-6">
                                    <b><span>CategoryName</span></b>
                                    @Html.EditorFor(model => model.categoryPostId, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    @Html.ValidationMessageFor(model => model.categoryPostId, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <b><span>CreateBy</span></b>
                                    @Html.EditorFor(model => model.createdBy, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    @Html.ValidationMessageFor(model => model.createdBy, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-sm-6">
                                    <b><span>CreateDate</span></b>
                                    @Html.EditorFor(model => model.createdDate, new { htmlAttributes = new { @class = "form-control", @required = true, @type = "Date" } })
                                    @Html.ValidationMessageFor(model => model.createdDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <b><span>ModifyDate</span></b>
                                    @Html.EditorFor(model => model.modifyDate, new { htmlAttributes = new { @class = "form-control", @required = true, @type = "Date" } })
                                    @Html.ValidationMessageFor(model => model.modifyDate, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-sm-6">
                                    <b><span>ModifyBy</span></b>
                                    @Html.EditorFor(model => model.modifyBy, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    @Html.ValidationMessageFor(model => model.modifyBy, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <b><span>CategoryNamePost</span></b>
                                    @Html.EditorFor(model => model.PostCategory.categoryNamePost, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                    @Html.ValidationMessageFor(model => model.PostCategory.categoryNamePost, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group col-sm-6">
                                    <b> <span>Status</span></b>
                                    <div class="checkbox">
                                        @Html.EditorFor(model => model.status, new { htmlAttributes = new { @class = "form-control", @required = true } })
                                        @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <b><span>Thumnail</span></b>
                                    <input class="form-control" type="file" name="avatar" />
                                </div>
                            </div>
                            <!-- Tab Pane End -->
                        </div>
                        <!-- Tab Content End -->
                    </div>
                    <!-- Edit Product End -->
                </div>
        </section>
    </div>
    <!-- Main Content End -->
}