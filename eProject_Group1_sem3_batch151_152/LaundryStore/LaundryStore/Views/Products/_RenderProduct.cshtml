@model IEnumerable<LaundryStore.Models.Product>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_layoutOtherPage.cshtml";
}

<!-- inner banner start -->
@section scripts{
    <div class="container">
        <div class="row z-5 mt-85 align-items-center">
            <div class="col-lg-7 text-center text-lg-left">
                <h1 class="blue">BẢNG GIÁ CHI TIẾT</h1>
            </div>
        </div>
    </div>
}
<!-- inner banner end -->
<!-- service detaiil start -->
<section class="blog-detail pt-95 pb-65">
    <div class="container">
        <div class="row">
            <div class="col-xl-4 col-lg-5">
                <div class="servvice-link-list mb-30">
                    <ul>
                        @foreach (var ct in ViewBag.ListCategory)
                        {
                            <li><a href="/Products/DetailProduct/@ct.id"><i class="fas fa-chevron-right"></i>@ct.categoryName</a></li>
                        }
                    </ul>
                </div>
                <div class="right-box bg-light-white mb-30">
                    <div class="right-box-head">
                        <h4 class="fs-22">Tìm kiếm</h4>
                    </div>
                    <div class="right-box-content">
                        <form action="#" class="relative mt-10 mb-10">
                            <input type="text" class="form-control input-white search-white" id="search2" placeholder="Tìm kiếm ..">
                            <i class="fas fa-search transform-v-center blue"></i>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xl-8 col-lg-7">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-6">
                            <h2>BẢNG GIÁ</h2>
                        </div>
                        <div class="col-sm-6">
                            <button style="float:right" type="submit" class="btn btn-md btn-success" onclick="addToCart()"><b>ĐĂNG KÍ GIẶT</b></button>
                        </div>
                    </div>
                    <table class="table table-bordered" style="text-align:center;">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>HÌNH ẢNH</th>
                                <th>TÊN DỊCH VỤ</th>
                                <th>LOẠI DỊCH VỤ</th>
                                <th>GIÁ DỊCH VỤ</th>
                                <th>GIẢM GIÁ (%)</th>
                                <th>CHỌN DỊCH VỤ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ var value = 1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @(value++)
                                    </td>
                                    <td>
                                        <img width="70" height="70" src="~/@item.image" />
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.productName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.type)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.discount)
                                    </td>
                                    <td>
                                        <input style="width:25px; height:25px;" type="checkbox" id="checkbox_@item.id" value="@item.id"/>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="service-detail-text">
                    <div class="hr-1 opacity-1 bg-black mt-5 mb-25"></div>
                    <h4 class="fs-19 f-700 mb-10 mb-md-15 lh-13">Dịch vụ giặt ủi của cửa hàng chúng tôi bao gồm:</h4>
                    <ul class="check-list type-2-c half-list">
                        <li><i class="far fa-check-square"></i>Áo quần</li>
                        <li><i class="far fa-check-square"></i>Giày dép</li>
                        <li><i class="far fa-check-square"></i>Chăn mền</li>
                        <li><i class="far fa-check-square"></i>Nệm rèm thảm</li>
                        <li><i class="far fa-check-square"></i>Đồ da lông thú</li>
                        <li><i class="far fa-check-square"></i>Balo túi xách</li>
                        <li><i class="far fa-check-square"></i>Giặt theo gói</li>
                        <li><i class="far fa-check-square"></i>Gói cho doanh nghiệp</li>
                    </ul>
                    <div class="hr-1 opacity-1 bg-black mt-30 mb-25"></div>                
                </div>
            </div>
        </div>
    </div>
</section>
<!-- service detaiil end -->
<style>
    .table-bordered td, .table-bordered th {
        border: 1px solid #dee2e6;
        vertical-align: middle;
}
</style>