@model IEnumerable<LaundryStore.Models.News>

<!-- blog start -->
<section class="blog pt-95 pb-50">
    <div class="container">
        <div class="row mb-35 align-items-end">
            <div class="col-lg-9 text-center text-lg-left">
                <p class="sub-head blue f-700 mb-5"><span class="d-sm-inline-block d-lg-none">............</span>THÔNG TIN & BÀI VIẾT MỚI<span>............</span></p>
                <h1 class="mb-sm-15">Tin Tức Mới Nhất</h1>
            </div>
            <div class="col-lg-3 text-center text-lg-right mt-md-15">
                <div class="blog-nav mb-10">
                    <a href="" class="blog-nav-icon left">
                        <i class='fas fa-chevron-left'></i>
                    </a>
                    <a href="" class="blog-nav-icon ml-10 right">
                        <i class='fas fa-chevron-right'></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="owl-carousel owl-theme blog-slider">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="each-blog transition-4 mb-50 shadow-1">
                                <div class="blog-imgs">
                                    <a href="@Url.Action("Details", "Blogs", new { id = item.id })"><img width="330" height="220" src="~/@item.thumbnail" alt=""/></a>
                                    <div class="blog-image-info z-10">
                                        <p class="fs-14 white mb-10">@Html.DisplayFor(modelItem => item.PostCategory.categoryNamePost)</p>
                                        <span class="date-tag bg-blue fs-12">@Html.DisplayFor(modelItem => item.createdDate)</span>
                                    </div>
                                </div>
                                <div class="blog-content bg-light-white">
                                    <h4 class="mb-5"><a href="@Url.Action("Details", "Blogs", new { id = item.id })" class="fs-19 f-500 lh-14">@Html.DisplayFor(modelItem => item.title)</a></h4>
                                    <p>
                                        @Html.DisplayFor(modelItem => item.shortDescription)
                                    </p>
                                    <div class="hr-1 bg-black opacity-1"></div>
                                    <a href="@Url.Action("Details", "Blogs", new { id = item.id })" class="read-blog f-500">Xem thêm<i class="fas fa-long-arrow-alt-right"></i></a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- blog end -->