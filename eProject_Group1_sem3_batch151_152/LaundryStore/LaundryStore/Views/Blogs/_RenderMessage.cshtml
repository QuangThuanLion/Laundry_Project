
@using (Html.BeginForm("CreateMessage", "Blogs", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="post-comment ">
            <h4 class="fs-25 f-700 mt-40 mb-20">Ý Kiến Của Bạn</h4>
            <form action="CreateMessage" method="post">
                <div class="row">
                    @if (Session["id_Customer"] == null)
                    {
                        <div class="col-lg-6">
                            <div class="form-group relative mb-25">
                                <input type="text" class="form-control input-white light-border" id="name" placeholder="Enter your name" name="name">
                                <i class="far fa-user transform-v-center"></i>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-group relative mb-25">
                                <input type="email" class="form-control input-white light-border" id="email" placeholder="Enter your email" name="email">
                                <i class="far fa-envelope transform-v-center"></i>
                            </div>
                        </div>
                    }
                    <input type="hidden" value="@Model.id" name="idPost" />
                    <div class="col-lg-12">
                        <textarea class="form-control input-white light-border mb-25" name="message" id="message" cols="30" rows="7" placeholder="Ý kiến của bạn"></textarea>
                    </div>
                    <div class="col-lg-12">
                        <button type="submit" class="btn btn-blue btn-md mb-5"><b>Xác nhận</b></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
}
