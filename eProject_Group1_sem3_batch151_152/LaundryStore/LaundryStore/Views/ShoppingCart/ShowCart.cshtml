
@{
    ViewBag.Title = "ShowCart";
    Layout = "~/Views/Shared/_layoutOtherPage.cshtml";
}

<!-- inner banner start -->
@section scripts{
    <div class="container">
        <div class="row z-5 mt-85 align-items-center">
            <div class="col-lg-7 text-center text-lg-left">
                <h1 class="blue">Service</h1>
            </div>
        </div>
    </div>
}
<!-- inner banner end -->

<!-- cart area start -->
<!-- cart start -->
<section class="cart pt-90 pb-90">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="cart-page table-responsive">
                    <table class="cart-table">
                        <thead>
                            <tr>
                                <th class="prdt_remove">Delete</th>
                                <th class="prdt_thumb">Image</th>
                                <th class="prdt_name">Product</th>
                                <th class="prdt-price">Price</th>
                                <th class="prdt_quantity">Quantity</th>
                                <th class="prdt_total">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="prdt-remove"><a href="#"><i class="far fa-trash-alt"></i></a></td>
                                <td class="prdt-thumb">
                                    <a href="#"><img src="~/Assets/Client/vendors/img/shop/prdt1.jpg" /></a>                                   
                                </td>
                                <td class="prdt-name"><a href="#">Broom and Dustpan</a></td>
                                <td class="prdt-price">$12.00</td>
                                <td class="prdt-quantity">
                                    <label>Quantity</label>
                                    <input class="form-control" min="1" max="100" value="1" type="number">
                                </td>
                                <td class="prdt-total">$120.0</td>
                            </tr>
                            <tr>
                                <td class="prdt-remove"><a href="#"><i class="far fa-trash-alt"></i></a></td>
                                <td class="prdt-thumb">
                                    <a href="#"><img src="~/Assets/Client/vendors/img/shop/prdt2.jpg" /></a>                                   
                                </td>
                                <td class="prdt-name"><a href="#">Eko Clean Combo</a></td>
                                <td class="prdt-price">$78.00</td>
                                <td class="prdt-quantity">
                                    <label>Quantity</label>
                                    <input class="form-control" min="1" max="100" value="1" type="number">
                                </td>
                                <td class="prdt-total">$78.00</td>
                            </tr>
                            <tr>
                                <td class="prdt-remove"><a href="#"><i class="far fa-trash-alt"></i></a></td>
                                <td class="prdt-thumb">
                                    <a href="#"><img src="~/Assets/Client/vendors/img/shop/prdt3.jpg" /></a>                                  
                                </td>
                                <td class="prdt-name"><a href="#">Clean Orange</a></td>
                                <td class="prdt-price">$20.00</td>
                                <td class="prdt-quantity">
                                    <label>Quantity</label>
                                    <input class="form-control" min="1" max="100" value="1" type="number">
                                </td>
                                <td class="prdt-total">$20.00</td>
                            </tr>
                            <tr>
                                <td class="prdt-remove"><a href="#"><i class="far fa-trash-alt"></i></a></td>
                                <td class="prdt-thumb">
                                    <a href="#"><img src="~/Assets/Client/vendors/img/shop/prdt4.jpg" /></a>                                 
                                </td>
                                <td class="prdt-name"><a href="#">Broom and Dustpan</a></td>
                                <td class="prdt-price">$15.00</td>
                                <td class="prdt-quantity">
                                    <label>Quantity</label>
                                    <input class="form-control" min="1" max="100" value="1" type="number">
                                </td>
                                <td class="prdt-total">$15.0</td>
                            </tr>
                            <tr>
                                <td colspan="6" class="text-right">
                                    <a href="" class="btn btn-black btn-md update-cart">UPDATE CART</a>
                                    <a href="" class="clear-cart f-left">CLEAR CART</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row mt-45 mt-md-30">
            <div class="col-lg-6 mb-md-30">
                <div class="crt-coxes">
                    <h3 class="cart-box-head bg-black white">Use Gift Coupon</h3>
                </div>
                <div class="inner-cart-box">
                    <p class="lh-10 mb-10">Enter your gift certificate code here</p>
                    <div class="input-group coupon-input">
                        <input type="text" class="form-control" placeholder="Your coupon code" aria-label="Recipient's username">
                        <div class="input-group-append">
                            <button class="btn btn-black btn-md" type="button">APPLY COUPON</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="crt-coxes">
                    <h3 class="cart-box-head  bg-black white">Cart Total</h3>
                </div>
                <div class="inner-cart-box">
                    <ul class="total-table">
                        <li><span>Sub Total:</span>$1000.00</li>
                        <li><span>Tax :</span>$15.00</li>
                        <li class="total"><span>TOTAL:</span>$1015.00</li>
                    </ul>
                    <div class="text-center text-sm-right">
                        <a href="/ShoppingCart/Checkout" class="btn btn-blue mt-10">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- cart end -->
<!-- cart area end -->
