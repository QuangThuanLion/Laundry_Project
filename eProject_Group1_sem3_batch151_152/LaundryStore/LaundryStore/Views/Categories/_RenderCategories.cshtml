@model IEnumerable<LaundryStore.Models.Category>

<!-- service start -->
<section class="service pt-95 pb-100 bg-light-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <p class="sub-head blue f-700 mb-5"><span>............</span>DỊCH VỤ TỐT NHẤT CỦA CHÚNG TÔI<span>............</span></p>
                <h1 class="mb-45">Dịch Vụ Tốt Nhất Cho Bạn</h1>
                <img src="~/Assets/Client/vendors/img/other/brush.png" class="service-cg-icon" alt="" />
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-xl-3 col-md-6 wow fadeInUp">
                    <div class="service-each shadow-2 mb-30 transition-4 text-center">
                        <a href="@Url.Action("DetailProduct", "Products", new { id = item.id })" class="black">
                            <div class="service-icn bg-light-white flex-center">
                                <img src="~/@item.image" alt="" />
                            </div>
                            <div class="service-text">
                                <h3 class="fs-20 f-700 mb-10">@Html.DisplayFor(modelItem => item.categoryName)</h3>
                                <p class="mb-0">@Html.DisplayFor(modelItem => item.description)</p>
                                <span class="line-servcie transition-4 bg-blue mt-5"></span>
                            </div>
                        </a>
                    </div>
                </div>            
            }
        </div>
    </div>
</section>
<!-- service end -->
